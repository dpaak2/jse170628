import java.util.Scanner;
public class GradeReport{
	public static void main(String[]args){
		int total=0,kor=0, math=0, eng=0, avg=0;
		Scanner s = new Scanner(System.in);
		String result="";
			
		System.out.print("Insert your name: ");
		String name = s.next();
		System.out.print("Insert your score \n");
		System.out.print("Korean: ");
		kor=s.nextInt();
		System.out.print("English: ");
		eng=s.nextInt();
		System.out.print("Math: ");
		math=s.nextInt();
		total= kor+eng+math;
		avg=total/3;
	/*	if(89<avg){
			result="A";
		}else if(79<avg){
			result="B";
		}else if(69<avg){
			result="C";
		} else if(59<avg){
			result="D";
		}else{
			result="F   do hard work!!!!!! ";
		}
		*/	
	
			
		switch(avg){
			case 100:
				grade="A";
				result="장학금 대상입니다. ";
			break;
			case 99||98||97||96||95||94||93||92||91||90||89 :
				//A
				grade="A";
				result="장학금 대상입니다. "; 
			break;
			case 89||88||87||86||85||84||83||82||81||80||79 : 
				//B
				grade="B";
				result="3학점 이수";
			break;
			case  79||78||77||76||75||74||73||72||71||70||69 : 
			    //c
				grade="C";
				result="2학점 이수";
			break;
			case 69||68||67||66||65||64||63||62||61||60||59  : 
			//d
				grade="D";
				result="1학점 이수";
			break;
			default: result=" Fantastic do hard work!!!! 재수강"; break;
			
		}
		
		
		System.out.print("*******************************\n");
		              System.out.print("   이름   총점  평균  등급\n");
		System.out.print("--------------------------------\n");
		System.out.print(String.format("| %s |  %d  |  %d  |  %s  | \n" ,name,total,avg,result));
		System.out.print("*******************************");
	}
}